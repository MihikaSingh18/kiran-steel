{
  "version": 2,
  "builds": [
    { "src": "public/index.html", "use": "@vercel/static" },
    { "src": "api/send.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "public/index.html" },
    { "src": "/api/(.*)", "dest": "api/send.js" }
  ],
  "functions": {
    "api/send.js": {
      "maxDuration": 30
    }
  }
}