{
  "version": 2,
  "builds": [
    { "src": "public/index.html", "use": "@vercel/static" },
    { 
      "src": "api/send.js", 
      "use": "@vercel/node",
      "config": { "maxDuration": 30 }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/send.js" },
    { "src": "/(.*)", "dest": "public/index.html" }
  ]
}